<h3>Log In</h3>

<div class="well">
  <%=form_tag '/login' do%>
    <div class='control-group'>
      <%=label_tag :name%>
      <%=text_field_tag :name%>
    </div><br/>
    <div class='control-group'>
      <%=label_tag :email%>
      <%=text_field_tag :email%>
    </div><br/>
    <div class='control-group'>
      <%=label_tag :password%>
      <%=password_field_tag :password_digest%>
    </div><br/>
    <%=submit_tag 'Login', class: 'btn btn-success'%>
  <%end%>
</div>