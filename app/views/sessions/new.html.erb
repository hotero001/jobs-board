<h3>Inicia Sesion</h3>

<div class="well">
  <%=form_tag '/login' do%>
    <div class='control-group'>
      <%=label_tag :nombre%>
      <%=text_field_tag :name%>
    </div><br/>
    <div class='control-group'>
      <%=label_tag :email%>
      <%=text_field_tag :email%>
    </div><br/>
    <div class='control-group'>
      <%=label_tag :contrasena%>
      <%=password_field_tag :password_digest%>
    </div><br/>
    <%=submit_tag 'Inicia Sesion', class: 'btn btn-success'%>
  <%end%>
</div>