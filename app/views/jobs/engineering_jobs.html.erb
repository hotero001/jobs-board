    <%@specialty_hash.each do |area, link_it|%>
      <%=link_to area, link_it, :class =>"button"%>
    <%end%>
  </div>
</div>

<h4>Empleos De Ingenieria</h4>

<%@parser.each do |wyo|%>
<div class="container">
  <div style="border: 1px solid black;">
