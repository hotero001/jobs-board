<h1>Trabajos En Nuevo Leon</h1>

<div class="type">
  <h3><b>Areas De Empleos</b></h3><br/>
  <%@specialty_hash.each do |area, link_it|%>
    <!--The method for button display below was initially used but i think it is frowned upon in the rails community-->
    <!--<%=button_to area, link_it, :method => :get%>-->
    <%=link_to area, link_it, :class=>"button"%>
  <%end%>
</div>

<%@jobs.each do |job|%>
  <div>
  <%=link_to job.title, job%><br/>
  <%=job.company%><br/>
  <%=job.pay%><br/>
  <%=job.description%><br/>
  <%if logged_in? and current_user.admin?%>
    <%=link_to 'Edit', edit_job_path(job)%>
    <%=link_to 'Destroy', job, method: :delete, data: {confirm: 'Are you sure you want to delete this job listing?'}%>
  <%end%>
  <div><br/><br/>
<%end%>

<br/>

<%if logged_in? and current_user.admin?%>
  <%=link_to "Create a New Job Listing", new_job_path%>
<%end%><br/>

